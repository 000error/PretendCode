{
  "name": "vscoding-lite-portable",
  "version": "1.0.0",
  "description": "A portable VScoding Lite editor built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder",
    "build-portable": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win portable --config.directories.output=dist-portable-fixed",
    "pack": "electron-packager . VScoding-Lite --platform=win32 --arch=x64 --out=dist-packager --overwrite --ignore=\"dist-.*\" --ignore=\".git\""
  },
  "keywords": [
    "electron",
    "editor",
    "vscode",
    "portable"
  ],
  "author": "Developer",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "electron": "^27.3.11",
    "electron-builder": "^24.6.4",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "monaco-editor": "^0.44.0"
  },
  "build": {
    "appId": "com.example.vscoding-lite",
    "productName": "VScoding Lite",
    "directories": {
      "output": "dist-portable"
    },
    "files": [
      "**/*",
      "!dist*",
      "!node_modules/.cache",
      "!*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!*~",
      "!*.md",
      "!.git"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "compression": "store",
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "asar": false
  }
}
